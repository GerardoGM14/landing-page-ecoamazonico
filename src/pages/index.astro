---
import Layout from '../layouts/Layout.astro';
import PeruMap from '../components/PeruMap.tsx';
import { Image } from 'astro:assets';
import logoImg from '../assets/logo_ecoamazonico.png';
import heroBg from '../assets/hero_background_v2.jpg';
import aboutBg from '../assets/hero_background.jpg';

const services = [
  {
    title: "Formulación y evaluación de proyectos",
    shortDesc: "Desarrollo integral de proyectos agrícolas, forestales y de infraestructura.",
    fullDesc: "Brindamos servicios especializados en la formulación y evaluación de proyectos en diversos sectores: Agrícolas, Agropecuarios, Forestales, Ambientales, Infraestructuras y otros. Nuestro enfoque garantiza la viabilidad técnica, económica y ambiental de cada iniciativa.",
    icon: "clipboard"
  },
  {
    title: "Estudios, Investigación y análisis",
    shortDesc: "Investigación científica y análisis técnico en múltiples disciplinas.",
    fullDesc: "Realizamos estudios exhaustivos en áreas agropecuaria, forestal, ambiental, social, educación y salud. Incluye análisis e interpretación de calidad de agua, análisis de macroinvertebrados, bioindicadores y análisis hidrobiológicos.",
    icon: "search"
  },
  {
    title: "Extensión y Capacitación",
    shortDesc: "Transferencia de conocimientos y fortalecimiento de capacidades.",
    fullDesc: "Programas de capacitación en sectores agrícolas, pecuarios, forestales, ambientales, salud y educación. Implementamos metodologías como Escuelas de Campo (ECAs) y aprendizaje de campesino a campesino.",
    icon: "users"
  },
  {
    title: "Proveedores",
    shortDesc: "Suministro de bienes e insumos para diversos sectores.",
    fullDesc: "Abastecimiento de insumos y bienes agrícolas, forestales, y para sectores de salud, educación y minería. Especialistas en la producción y comercialización de semillas certificadas.",
    icon: "truck"
  },
  {
    title: "Alquileres",
    shortDesc: "Renta de vehículos y equipos especializados.",
    fullDesc: "Servicio de alquiler de vehículos y equipos de monitoreo ambiental, garantizando herramientas de alta calidad para la ejecución de sus proyectos y operaciones de campo.",
    icon: "key"
  }
];
---

<Layout>
	<main class="bg-gray-50 min-h-screen font-sans text-gray-800">
		<!-- Sticky Header Wrapper -->
		<div class="sticky top-0 z-[60] w-full -mb-20">
		<!-- Top Bar -->
		<div class="bg-[#272623] text-gray-300 text-xs md:text-sm py-2 block">
			<div class="container mx-auto px-4 flex justify-between items-center md:gap-4">
				<div class="contents md:flex md:items-center md:gap-6">
					<div class="group relative flex items-center gap-2 cursor-pointer">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.05 12.05 0 0 0 .57 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.05 12.05 0 0 0 2.81.57A2 2 0 0 1 22 16.92z"></path></svg>
						<span class="hidden md:block">+51 945 775 810</span>
